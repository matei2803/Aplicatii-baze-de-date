<UserControl x:Class="expences.mvvm.view.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:expences.mvvm.view"
             mc:Ignorable="d" 
             d:DesignHeight="474.473" d:DesignWidth="663.634">
    <StackPanel>
        <TextBlock Text="Discover"
                   Foreground="White"
                   FontSize="28"
                   HorizontalAlignment="Left"
                   Margin="0,20,0,20"/>

        <StackPanel Orientation="Horizontal"
                    Margin="0,0,0,10">
            <Border Width="200"
                    Height="150">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="#8bc3ff" Offset="0.0"/>
                        <GradientStop Color="#CB4335" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Border.Clip>
                    <RectangleGeometry RadiusX="10"
                                       RadiusY="10"
                                       Rect="0,0,270,150"/>
                </Border.Clip>

                <Grid>
                    <StackPanel>
                        <TextBlock Text="Total Income"
                                   Foreground="White"
                                   FontSize="30"
                                   HorizontalAlignment="Center"/>

                        <TextBlock Text="€ 3000.00"
                                FontWeight="Bold"
                                Foreground="White"
                                FontSize="30"
                                HorizontalAlignment="Center"
                                Margin="15"/>

                    </StackPanel>
                </Grid>

            </Border>

            <Border Width="120"
                    Height="150">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="#8bc3ff" Offset="0.0"/>
                        <GradientStop Color="#CB4335" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Border.Clip>
                    <RectangleGeometry RadiusX="10"
                                       RadiusY="10"
                                       Rect="-10,0,120,150"/>
                </Border.Clip>

                <Image Source="/images/euro.png" Width="70" Height="70"
                            HorizontalAlignment="Right"
                            Margin="20 0 30 0"/>


            </Border>

            <Border Width="200"
                    Height="150">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="#7DCEA0" Offset="0.0"/>
                        <GradientStop Color="#F4D03F" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Border.Clip>
                    <RectangleGeometry RadiusX="10"
                                       RadiusY="10"
                                       Rect="0,0,270,150"/>
                </Border.Clip>

                <Grid>
                    <StackPanel>
                        <TextBlock Text="Total Expence"
                                   Foreground="White"
                                   FontSize="30"
                                   HorizontalAlignment="Center"/>

                        <TextBlock Text="€ 2453.00"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   FontSize="30"
                                   HorizontalAlignment="Center"
                                   Margin="15"/>

                    </StackPanel>
                </Grid>

            </Border>

            <Border Width="120"
                    Height="150">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="#7DCEA0" Offset="0.0"/>
                        <GradientStop Color="#F4D03F" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Border.Clip>
                    <RectangleGeometry RadiusX="10"
                                       RadiusY="10"
                                       Rect="-10,0,120,150"/>
                </Border.Clip>

                <Image Source="/images/euro.png" Width="70" Height="70"
                            HorizontalAlignment="Right"
                            Margin="20 0 30 0"/>


            </Border>

        </StackPanel>

        <StackPanel>

            <StackPanel.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="Margin" Value="15,0,0,0"/>
                </Style>
            </StackPanel.Resources>

            <TextBlock Text="Categories with biggest expence"
                   Foreground="White"
                   FontSize="20"
                   HorizontalAlignment="Left"
                   Margin="0,0,0,20"/>
            <StackPanel Orientation="Horizontal">
                <Border Width="150"
                        Height="150"
                        CornerRadius="10"
                        Margin="0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                            <GradientStop Color="#844eff" Offset="0.0"/>
                            <GradientStop Color="#ffb73a" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>

                    <Grid>
                        <StackPanel>
                            <TextBlock Text="Food"
                                   Foreground="White"
                                   FontSize="28"
                                   Margin="20,10,10,0"/>
                            <TextBlock Text="€ 1224"
                                   Foreground="White"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Margin="30,20,10,0"/>
                        </StackPanel>
                    </Grid>
                </Border>
                <Border Width="150"
                        Height="150"
                        CornerRadius="10">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                            <GradientStop Color="#FF5733" Offset="0"/>
                            <GradientStop Color="#FDFF00" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid>
                        <StackPanel>
                            <TextBlock Text="Clothes"
                                   Foreground="White"
                                   FontSize="28"
                                   Margin="20,10,10,0"/>
                            <TextBlock Text="€ 624"
                                   Foreground="White"
                                   FontWeight="Bold"
                                   FontSize="28"
                                   Margin="30,20,10,0"/>
                        </StackPanel>
                    </Grid>
                </Border>
                <Border Width="150"
                        Height="150"
                        CornerRadius="10">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                            <GradientStop Color="#21D9EB" Offset="0.0"/>
                            <GradientStop Color="#ffb73a" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid>
                        <StackPanel>
                            <TextBlock Text="Trips"
                                   Foreground="White"
                                   FontSize="28"
                                   Margin="20,10,10,0"/>
                            <TextBlock Text="€ 324"
                                   Foreground="White"
                                   FontWeight="Bold"
                                   FontSize="28"
                                   Margin="30,20,10,0"/>
                        </StackPanel>
                    </Grid>
                </Border>
                <Border Width="150"
                        Height="150"
                        CornerRadius="10">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                            <GradientStop Color="#FB638F" Offset="0.0"/>
                            <GradientStop Color="#ffb73a" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid>
                        <StackPanel>
                            <TextBlock Text="Bills"
                                   Foreground="White"
                                   FontSize="28"
                                   Margin="20,10,10,0"/>
                            <TextBlock Text="€ 122"
                                       FontWeight="Bold"
                                   Foreground="White"
                                   FontSize="28"
                                   Margin="30,20,10,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

            </StackPanel>
        </StackPanel>

    </StackPanel>
</UserControl>
