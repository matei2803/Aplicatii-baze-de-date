<UserControl x:Class="expences.mvvm.view.UserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:expences.mvvm.view"
             xmlns:user="clr-namespace:expences.User"
             mc:Ignorable="d" 
             d:DesignHeight="474.473" d:DesignWidth="663.634">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="column1" Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border x:Name="border1" Background="#F5B7B1" Padding="40" CornerRadius="20, 0, 0, 20">
            <StackPanel VerticalAlignment="Center">
                <Image Source="/images/hacker.png" Width="130" Height="130" Margin="0,0,0,40"/>
                <TextBlock Text="You don't have an" TextAlignment="Center" FontWeight="SemiBold"
                           FontSize="20" Foreground="#363636"/>
                <TextBlock Text="account?" TextAlignment="Center" FontWeight="SemiBold"
                           FontSize="20" Foreground="#363636"/>
                <Button Content="Sign up" Margin="10 20 10 0" 
                                Style="{StaticResource buttonMainGreen}"
                                Click="Button_Click"/>
            </StackPanel>
        </Border>
        <Border Grid.Column="1" Padding="10" Background="#1ABC9C" CornerRadius="0 20 20 0">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Sign in to App" TextAlignment="Center" FontWeight="SemiBold"
                           FontSize="36" Foreground="#363636" VerticalAlignment="Top"
                           Margin="10 0 10 20"/>
                <Grid>
                    <Image Source="/images/google.png" Width="25" Height="25" Margin="0,0,80,20">
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="RenderTransform">
                                            <Setter.Value>
                                                <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                    <Image Source="/images/facebook.png" Width="25" Height="25" Margin="0,0,0,20">
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="RenderTransform">
                                            <Setter.Value>
                                                <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                    <Image Source="/images/linkedin.png" Width="25" Height="25" Margin="0,0,-80,20">
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="RenderTransform">
                                            <Setter.Value>
                                                <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>

                </Grid>
                <Grid>
                    <user:MyTextBox Hint="Username" Width="160"/>
                    <Image Source="/images/user.png" Width="23" Height="23" Margin="200 0 0 0">
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="RenderTransform">
                                            <Setter.Value>
                                                <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                </Grid>
                <Grid>
                    <user:MyTextBox Hint="Password" Width="160"/>
                    <Image Source="/images/hide.png" Width="23" Height="23" Margin="200 0 0 0"
                           MouseLeftButtonDown="Image_MouseLeftButtonDown"
                           x:Name="passwordTextBox">
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="RenderTransform">
                                            <Setter.Value>
                                                <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                </Grid>
                
                <Button Content="Sign in" 
                                Style="{StaticResource buttonMainPink}"
                                Click="Button_Click2"
                                Width="140" Margin="0 10 0 0"/>
            </StackPanel>
        </Border>
    </Grid>

</UserControl>
