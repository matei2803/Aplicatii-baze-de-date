<Window x:Class="expences.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:expences"
        xmlns:viewmodel="clr-namespace:expences.mvvm.viewmodel"
        mc:Ignorable="d" MouseLeftButtonDown="Window_Left"
        Title="MainWindow" Height="600" Width="900" WindowStyle="None"
        WindowStartupLocation="CenterScreen" AllowsTransparency="True"
        ResizeMode="NoResize" Background="Transparent">

    <Window.DataContext>
        <viewmodel:MainViewModel/>
    </Window.DataContext>

    <Border Background="#283747"
            CornerRadius="20" >
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition Height="320*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Manager"
                   VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Foreground="White"
                    FontSize="28"
                    Margin="20,0,0,0"/>

            <StackPanel Grid.Row="1" Grid.RowSpan="2">
                <TextBox Width="150"
                     Height="40"
                     VerticalContentAlignment="Center"
                     HorizontalContentAlignment="Left"
                     Margin="0,10,0,0"
                     Grid.Column="1"
                     Style="{StaticResource ModernTextbox}"/>
                <RadioButton Content="Dashboard"
                            Height="50"
                            Foreground="White"
                            FontSize="18"
                            Click="DashClick"
                            Style="{StaticResource MenuButtonTheme}"/>
                <RadioButton Content="Record Expenses"
                            Height="50"
                            Foreground="White"
                            FontSize="18"
                            Click="RecordClick"
                            Style="{StaticResource MenuButtonTheme}"/>
                <RadioButton Content="Future Payments"
                            Height="50"
                            Foreground="White"
                            FontSize="18"
                            Style="{StaticResource MenuButtonTheme}"/>
                <RadioButton Content="Expenses History"
                            Height="50"
                            Foreground="White"
                            FontSize="18"
                            Style="{StaticResource MenuButtonTheme}"/>
            </StackPanel>

            <StackPanel Grid.Column="2">
                <Grid>
                    <Image Source="/images/close (1).png" Width="25" Margin="0 4 10 0"
                       Style="{StaticResource iconApp}"
                           MouseLeftButtonDown="CloseClick"/>
                    <Image Source="/images/menu.png" Width="25" Margin="0 4 37 0"
                       Style="{StaticResource iconApp}"
                           MouseLeftButtonDown="Image_MouseLeftButtonDown"/>
                    <Image Source="/images/minimize.png" Width="25" Margin="0 4 65 0"
                       Style="{StaticResource iconApp}" 
                           MouseLeftButtonDown="Image_MouseLeftButtonDown_1"/>

                </Grid>

                <TextBlock Text="Hi, user"
                   VerticalAlignment="Center"
                    HorizontalAlignment="right"
                    Foreground="White"
                    FontSize="18"
                    Margin="0,0,120,0"/>

                <Image Source="images/hacker.png" 
                           Width="50" Height="50"
                            Margin="290,-40,0,-20"
                            MouseLeftButtonDown="Open_Click">
                    <Image.Style>
                        <Style TargetType="Image">
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>
                <Button Width="40" 
                        Height="20" 
                        Background="Transparent"
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Right">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderThickness="0">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>

                    <TextBlock Text="Help" 
                               Foreground="White" 
                               FontSize="12" />
                </Button>
                <Button Width="45" 
                        Height="20" 
                        Background="Transparent"
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Right"
                        Margin="0,-20,40,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderThickness="0">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#22202f" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <TextBlock Text="Contact" 
                               Foreground="White" 
                               FontSize="12" />
                </Button>

            </StackPanel>
            <ContentControl
                            Margin="10,10,10,10"
                            Content="{Binding CurrentView}" 
                 Grid.Row="1" Grid.RowSpan="2" Grid.Column="1"/>


        </Grid>

    </Border>
</Window>
